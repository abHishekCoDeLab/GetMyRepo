<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.getmyrepo.EnterDeatilLayout"
    android:background="@color/white">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_action_arrow_back"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/Back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextShow"
        android:layout_below="@id/Back"
        android:text="What's your Name  ?"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="22sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/TextShow"
        android:backgroundTint="@color/black"
        android:cursorVisible="true"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="4dp"
        android:hint="Abhishek"
        android:id="@+id/GetInterest"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_arrow_forward"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/Forward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circleback"
        android:padding="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>
