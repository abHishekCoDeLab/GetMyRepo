<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Name"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/RepoItemName"
                android:layout_marginLeft="8dp"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="2344"
                    android:id="@+id/ViewRepoList"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="4dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/ViewImageRepoList"
                    android:layout_weight="1"
                    android:src="@drawable/ic_remove_red_eye_black_24dp"
                    android:scaleType="fitStart"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="start"
                    android:id="@+id/StarRepoList"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="4dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/StarImageRepoList"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_black_24dp"
                    android:scaleType="fitStart"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="599"
                    android:id="@+id/ForkRepoList"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="4dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/ForkImageRepoList"
                    android:layout_weight="1"
                    android:src="@drawable/fork"
                    android:scaleType="fitStart"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CSS"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/RepoItemLang"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GOOGLE"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:id="@+id/RepoItemOwner"/>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>